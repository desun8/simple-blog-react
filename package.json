    "@storybook/addon-onboarding": "^10.0.0-beta.2",
    "@storybook/addon-vitest": "^10.0.0-beta.2",
    "@storybook/react-vite": "^10.0.0-beta.2",
    "@tanstack/router-plugin": "^1.131.18",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "chromatic": "^13.1.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-i18next": "^6.1.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "^10.0.0-beta.2",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "playwright": "^1.55.0",
    "prettier": "3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "storybook": "^10.0.0-beta.2",
    "stylelint": "^16.23.1",
    "stylelint-config-hudochenkov": "^12.0.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite": "^7.1.2",
    "vite-plugin-svgr": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
